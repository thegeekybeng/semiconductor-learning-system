# Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.1

# Anthropic API Configuration (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
CHROMA_DB_PATH=./data/chroma_db
POSTGRES_URL=postgresql://user:password@localhost:5432/semiconductor_db
REDIS_URL=redis://localhost:6379/0

# Crawling Configuration
MAX_CRAWL_DEPTH=3
CRAWL_DELAY=2
MAX_PAGES_PER_SOURCE=100
USER_AGENT=SemiconductorLearningBot/1.0

# Scheduling Configuration
CRAWL_SCHEDULE=0 2 * * *  # Daily at 2 AM
TRAINING_SCHEDULE=0 4 * * 0  # Weekly on Sunday at 4 AM
CLEANUP_SCHEDULE=0 1 * * 0  # Weekly cleanup

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=10
SIMILARITY_THRESHOLD=0.7

# Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/semiconductor_learning.log

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG_MODE=False

# Data Sources
ENABLE_ARXIV_CRAWLING=True
ENABLE_IEEE_CRAWLING=True
ENABLE_SEMICONDUCTOR_NEWS=True
ENABLE_PATENT_CRAWLING=True
ENABLE_INDUSTRY_REPORTS=True

# Performance Configuration
MAX_WORKERS=4
BATCH_SIZE=32
VECTOR_DIMENSION=384
